{
	"extends": [
		"tslint:recommended",
		"tslint-react"
	],
	"defaultSeverity": "error",
	"linterOptions": {
		"exclude": [
			"**/*/*.js"
		]
	},
	"rules": {
		"indent": [
			true,
			"tabs",
			4
		],
		"arrow-parens": false,
		"arrow-return-shorthand": [
			false
		],
		"comment-format": [
			true,
			"check-tab"
		],
		"import-blacklist": [
			true,
			"rxjs"
		],
		"forin": false,
		"interface-over-type-literal": false,
		"jsx-key": false,
		"jsx-alignment": false,
		"interface-name": false,
		"no-angle-bracket-type-assertion": false,
		"max-line-length": [
			true,
			250
		],
		"member-access": false,
		"member-ordering": [
			true,
			{
				"order": "fields-first"
			}
		],
		"newline-before-return": false,
		"no-any": false,
		"no-empty": false,
		"no-empty-interface": false,
		"no-var-requires": false,
		"no-import-side-effect": [
			false
		],
		"no-inferrable-types": [
			true,
			"ignore-params",
			"ignore-properties"
		],
		"no-invalid-this": [
			true,
			"check-function-in-method"
		],
		"no-null-keyword": false,
		"no-require-imports": false,
		"no-string-literal": false,
		"no-submodule-imports": [
			false
		],
		"no-this-assignment": [
			true,
			{
				"allow-destructuring": true
			}
		],
		"no-trailing-whitespace": true,
		"no-unused-variable": [
			true,
			"react"
		],
		"prefer-for-of": false,
		"object-literal-sort-keys": false,
		"object-literal-key-quotes": false,
		"object-literal-shorthand": false,
		"jsx-wrap-multiline": false,
		"one-variable-per-declaration": [
			false
		],
		"only-arrow-functions": [
			false,
			"allow-declarations"
		],
		"ordered-imports": [
			false
		],
		"prefer-method-signature": false,
		"prefer-template": [
			true,
			"allow-single-concat"
		],
		"quotemark": [
			true,
			"double",
			"jsx-double"
		],
		"semicolon": [
			true,
			"always"
		],
		"trailing-comma": [
			true,
			{
				"singleline": "never",
				"multiline": {
					"objects": "always",
					"arrays": "always",
					"functions": "never",
					"typeLiterals": "ignore"
				},
				"esSpecCompliant": true
			}
		],
		"triple-equals": [
			true,
			"allow-null-check"
		],
		"type-literal-delimiter": true,
		"typedef": [
			true,
			"parameter",
			"property-declaration"
		],
		"variable-name": [
			true,
			"ban-keywords",
			"check-format",
			"allow-pascal-case",
			"allow-leading-underscore"
		],
		// tslint-react
		"jsx-no-lambda": false,
		"jsx-no-multiline-js": false
	}
}